{
        "$schema": "https://opencode.ai/config.json",
        "agent": {
                "code-reviewer": {
                        "description": "Reviews code for best practices and potential issues",
                        "mode": "subagent",
                        "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
                        "tools": {
                                "write": false,
                                "edit": false
                        }
                },
                "product-manager": {
                        "temperature": 0.7,
                        "prompt": "./prompts/product-manager.txt",
                        "mode": "subagent",
                        "tools": {
                                "write": false,
                                "edit": false,
                                "bash": false,
                                "read": true,
                                "grep": true,
                                "glob": true,
                                "list": true,
                                "patch": false,
                                "todowrite": true,
                                "todoread": true,
                                "webfetch": true
                        }
                }
        }
}
