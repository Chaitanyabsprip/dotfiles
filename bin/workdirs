#!/bin/sh
set -e
depends fd
set +e
(
	fd . -HIatd -d 1 -E .git \
		"$HOME/programs/" \
		"$HOME/projects/"
	fd . -HIad 1 -td -tf -E .git \
		"$HOME/.config/" \
		"$HOME/dotfiles/"
	echo "$HOME/dotfiles/"
	echo "$HOME/projects/"
	echo "$HOME/programs/"
	echo "$SCRIPTS/"
	echo "$DOWNLOADS/"
	echo "$HOME/pictures/"
) | sort -u
