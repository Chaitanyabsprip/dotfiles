#!/bin/sh
set -e
depends fd
set +e

strip_home() {
	if [ "$1" = "-s" ]; then
		sed "s|$HOME/\.||;s|$HOME/||"
	else
		cat
	fi
}

(
	fd . -HIatd -d 1 -E .git \
		"$HOME/projects/" \
		"$HOME/programs/"
	fd . -HIad 1 -td -E .git \
		"$HOME/.config/" \
		"$HOME/dotfiles/"
	echo "$HOME/dotfiles/"
	echo "$HOME/projects/"
	echo "$HOME/programs/"
	echo "$SCRIPTS/"
	echo "$DOWNLOADS/"
	echo "$NOTESPATH/"
	echo "$HOME/pictures/"
	worktrees
) | sort -u | strip_home "$1"
