#!/bin/sh
depends fd

strip_home() {
	if [ "$1" = "-s" ]; then
		sed "s|$HOME/\.||;s|$HOME/||"
	else
		cat
	fi
}

(
	find "$PROJECTS" -type d -name .git -exec dirname {} \;
	find "$PROJECTS/" \
		"$HOME/programs/" \
		"$XDG_CONFIG_HOME/" \
		"$DOTFILES/" \
		-maxdepth 1 -type d
	echo "$SCRIPTS/"
	echo "$DOWNLOADS/"
	echo "$NOTESPATH/"
	echo "$HOME/pictures/"
	worktrees
) | strip_home "$1" | sort -u
