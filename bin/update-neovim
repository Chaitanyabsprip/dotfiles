#!/bin/sh

[ -d "$HOME/programs" ] || mkdir "$HOME/programs"
cd "$HOME/programs" || exit
[ -d "$HOME/programs/neovim" ] || git clone --depth 1 --branch nightly https://github.com/neovim/neovim neovim
cd neovim || exit
make CMAKE_BUILD_TYPE=Release &&
sudo make install

cd .. || exit
[ -d "./neovim" ] && rm -rf neovim || exit
