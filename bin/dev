#!/bin/sh

usage() {
	echo "Usage: $0 <image> <directory>"
}

if [ -z "$1" ]; then
	usage && exit 1
fi

image="$1"
[ -n "$1" ] && shift
name="$(realpath "${1:-"$(pwd)"}")"
dir="$name"
[ -n "$1" ] && shift
echo "$name" | grep -q '/' && name="$(basename "$name")"

exec docker run -it --rm --privileged -h "$name" --name "$name" \
	-v "$dir":"/root/$name" \
	-w "/root/$name" \
	"$image" "$@"
