[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	root = rev-parse --show-toplevel
	sh = !"git log --oneline | fzf -m -d ' ' --preview \"git show --color=always {1}\" | cut -d ' ' -f 1 | xargs -n 9999"
	tags = tag --list --sort=version:refname

[blame]
	coloring = highlightRecent

[column]
	ui = always
	sort = -committerdate

[commit]
	verbose = true

[core]
	editor = nvim
	pager = delta
	preloadIndex = true
	; autocrlf = input

[delta]
	line-numbers = true
	line-numbers-minus-style = red
	minus-style = red
	minus-emph-style = syntax red
	line-numbers-plus-style = green
	plus-style = green
	plus-emph-style = syntax green
	syntax-theme = material-rose-pine
	navigate = true
	hyperlinks = true
	side-by-side = false
	file-modified-label = modified:

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWs = allow-indentation-change
	compactionHeuristic = true
	tool = nvimdiff4

[difftool "nvimdiff4"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c  \"wincmd L\""

[fetch]
	prune = true
	pruneTags = true
	all = true
	parallel = 0

[github]
	user = Chaitanyabsprip

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[log]
	follow = true

[merge]
	conflictstyle = diff3
	tool = nvimdiff

[mergetool "nvimdiff"]
	layout = "LOCAL,BASE,REMOTE/MERGED+LOCAL,MERGED,REMOTE"

[pull]
	rebase = false

[push]
	autoSetupRemote = true

[status]
	showStash = true

[user]
	name = Chaitanya Sharma
	useConfigOnly = true

