#!/bin/sh

set -e
depends fd
set +e

main() {

	find "$PROJECTS" "$HOME/projects" \
		-path '*/node_modules/*' \
		-type f -name '.git' \
		-exec dirname {} \; |
		filter |
		sort -u |
		sed 's|/$||' |
		strip_home "$1"
}

filter() {
	while read -r dir; do
		if is_worktree "$dir" && ! is_submodule "$dir"; then
			echo "$dir"
		fi
	done
}

strip_home() {
	if [ "$1" = "-s" ]; then
		sed "s|$HOME/\.||;s|$HOME/||"
	else
		cat
	fi

}

is_worktree() {
	[ "$(git -C "$1" rev-parse --is-inside-work-tree)" = "true" ]
}

is_submodule() {
	[ -n "$(git -C "$1" rev-parse --show-superproject-working-tree)" ]

}

main "$@"
